                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fatah_ro" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fatah_dza" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fatah_da"  />
